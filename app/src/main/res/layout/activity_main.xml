<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ratechdroid.mycalcy.MainActivity"
    android:background="#fcd307">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:background="#fefdfd"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="bottom|right"
        android:textSize="50sp"
        android:textStyle="normal"
        android:nestedScrollingEnabled="true"
        android:maxLines="4"
        android:maxLength="30" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/btn7"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_margin="3dp" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/btn8"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:layout_toEndOf="@+id/btn7"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn7"
        android:onClick="onClickNumber"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignBottom="@+id/btn7" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/btn9"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn8"
        android:onClick="onClickNumber"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignBottom="@+id/btn8"
        android:layout_alignRight="@+id/btn6"
        android:layout_alignEnd="@+id/btn6" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/btn4"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:gravity="center"
        android:layout_below="@+id/btn7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_margin="3dp" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/btn5"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:layout_toEndOf="@+id/btn7"
        android:gravity="center"
        android:layout_below="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:onClick="onClickNumber"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_margin="3dp" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/btn6"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3"
        android:layout_alignTop="@+id/btn5"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignRight="@+id/btn3"
        android:layout_alignEnd="@+id/btn3" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/btn1"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:layout_toLeftOf="@+id/btn5"
        android:gravity="center"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_margin="3dp" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/btn2"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:layout_toEndOf="@+id/btn4"
        android:gravity="center"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:onClick="onClickNumber"
        android:drawableTint="#e71616"
        android:layout_margin="3dp" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/btn3"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:drawableTint="#e71616"
        android:layout_margin="3dp" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/btnplus"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:onClick="onClickOperator"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_marginTop="3dp"
        android:layout_alignBottom="@+id/btn9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btnminus"
        android:layout_alignStart="@+id/btnminus" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/btnminus"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:gravity="center"
        android:onClick="onClickOperator"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_alignTop="@+id/btn6"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btnmul"
        android:layout_alignStart="@+id/btnmul" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="*"
        android:id="@+id/btnmul"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:gravity="center"
        android:onClick="onClickOperator"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/btndiv"
        android:layout_alignStart="@+id/btndiv"
        android:layout_alignBottom="@+id/btn3" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="C"
        android:id="@+id/btnclear"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:layout_toLeftOf="@+id/btn2"
        android:gravity="center"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickClear"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/btn0"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:layout_toEndOf="@+id/btn1"
        android:gravity="center"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:onClick="onClickNumber"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="="
        android:id="@+id/btnequal"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:layout_toEndOf="@+id/btn2"
        android:gravity="center"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:onClick="onClickEqual"
        android:elegantTextHeight="false"
        android:contextClickable="false"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:text="/"
        android:id="@+id/btndiv"
        android:background="#4d4d4d"
        android:textSize="40sp"
        android:textColor="#fffdfd"
        android:gravity="center"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:onClick="onClickOperator"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
